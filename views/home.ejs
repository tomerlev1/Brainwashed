<%- include("partials/header")-%>
  <div class="topHome"> 
    <h1 class="homeTitle">Sharing is caring</h1>
  
    <form class="d-flex searchPost" role="search" action="/search" method="post">
      <input class="form-control me-2 inputBox" type="search" oninput="this.value = this.value.replace(/[^A-Za-z0-9!,' ']/, '')" placeholder="Search Post By Title" aria-label="Search" name="postTitle">
      <button class="btn btn-outline-success" id="searchBtn" type="submit">Search</button>
    </form><br>
    <message class="errorSearch hidden" id="error"> <%= message %> </message>
  </div>

  
  <div class="globalPosts">
    <% for (let i = listPosts.length - 1; 0 <= i; i--) { %>
      <h4 class="GlobalpostsTitle"><%= listPosts[i].title%></h4>
      <p class="ahutorName" style="text-decoration: none;">
        Author: <%= listAhutors[i] %>
      </p><br><br>
      <p class="GlobalpostsContent"><%= listPosts[i].content.substring(0,150) %>...</p>
      <p class="globalTime"><a class='readmore' href='/posts/<%= listPosts[i].id %>' style="text-decoration: none;">Read more</a><%= String(listPosts[i].createdAt).substring(0,24) %></p>
      <hr>
    <% }; %>
  </div>

  <div></div>
  
  
<%- include("partials/footer")-%>